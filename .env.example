# 应用配置
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=企业AI工作空间
NEXT_PUBLIC_APP_VERSION=1.0.0

# 应用URL配置
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Supabase配置
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/ai_workspace
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_TIMEOUT=30000

# Redis配置（可选，用于缓存）
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# 文件存储配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/gif,application/pdf
NEXT_PUBLIC_UPLOAD_ENDPOINT=/api/upload

# 安全配置
CSRF_SECRET=your-csrf-secret-here
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-32-character-encryption-key

# API配置
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=900000
API_TIMEOUT=30000

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/ai-workspace

# 监控配置
HEALTH_CHECK_ENDPOINT=/api/health
METRICS_ENDPOINT=/api/metrics
ENABLE_METRICS=true

# 邮件配置（用于密码重置等）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourcompany.com

# 企业默认配置
DEFAULT_COMPANY_NAME=示例企业
DEFAULT_ADMIN_EMAIL=admin@yourcompany.com
DEFAULT_ADMIN_PASSWORD=change-me-please

# Dify默认配置
DEFAULT_DIFY_BASE_URL=http://192.144.232.60/v1
DEFAULT_DIFY_TIMEOUT=30000

# 功能开关
ENABLE_USER_REGISTRATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_MULTI_COMPANY=false
ENABLE_FILE_UPLOAD=true
ENABLE_CHAT_HISTORY=true

# 性能配置
MAX_CHAT_HISTORY_DAYS=90
MAX_SESSIONS_PER_USER=50
CLEANUP_INTERVAL_HOURS=24

# 开发配置
NEXT_PUBLIC_DEBUG=false
ENABLE_API_DOCS=false
ENABLE_ADMIN_PANEL=true
