# 开发环境配置
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=企业AI工作空间
NEXT_PUBLIC_APP_VERSION=1.0.0

# 应用URL配置
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=dev-nextauth-secret-for-testing-only

# 数据库配置 (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres123@localhost:5433/ai_workspace
DATABASE_POOL_MIN=1
DATABASE_POOL_MAX=20
DATABASE_TIMEOUT=10000

# Redis配置
REDIS_URL=redis://localhost:6380
REDIS_PASSWORD=redis123
REDIS_DB=0

# Qdrant向量数据库
QDRANT_URL=http://localhost:6334

# 安全配置 (开发环境)
CSRF_SECRET=dev-csrf-secret-for-testing-only-32-chars
JWT_SECRET=dev-jwt-secret-for-testing-only-32-chars-long
ENCRYPTION_KEY=dev-encryption-key-32-chars-long

# API配置
API_RATE_LIMIT_REQUESTS=1000
API_RATE_LIMIT_WINDOW=900000
API_TIMEOUT=30000

# 日志配置
LOG_LEVEL=debug
LOG_FORMAT=text
LOG_FILE_PATH=./logs

# 企业默认配置
DEFAULT_COMPANY_NAME=演示企业
DEFAULT_ADMIN_EMAIL=admin@demo.com
DEFAULT_ADMIN_PASSWORD=admin123

# Dify默认配置
DEFAULT_DIFY_BASE_URL=http://192.144.232.60/v1
DEFAULT_DIFY_TIMEOUT=30000

# 功能开关 (开发环境)
ENABLE_USER_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_MULTI_COMPANY=false
ENABLE_FILE_UPLOAD=true
ENABLE_CHAT_HISTORY=true

# 开发配置
NEXT_PUBLIC_DEBUG=true
ENABLE_API_DOCS=true
ENABLE_ADMIN_PANEL=true

# 跳过某些验证 (仅开发环境)
SKIP_ENV_VALIDATION=true
SKIP_DB_VALIDATION=true
