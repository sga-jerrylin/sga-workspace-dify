# 🔧 企业AI工作空间 - 轻量级环境配置
# 复制此文件为 .env 并填入实际值

# ===========================================
# 应用基础配置
# ===========================================
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=企业AI工作空间
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:18000

# ===========================================
# 安全密钥 (⚠️ 生产环境必须修改)
# ===========================================
# 生成方法: openssl rand -base64 32
JWT_SECRET=dGVzdC1qd3Qtc2VjcmV0LWZvci1kZXZlbG9wbWVudC0zMi1jaGFycw==
ENCRYPTION_KEY=test-encryption-key-32-chars-dev

# ===========================================
# 数据库配置
# ===========================================
POSTGRES_DB=ai_workspace
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# ===========================================
# Redis配置
# ===========================================
REDIS_PASSWORD=redis123

# ===========================================
# 文件存储配置 (可选)
# ===========================================
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123

# ===========================================
# 默认管理员配置
# ===========================================
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin123456

# ===========================================
# AI服务配置
# ===========================================
# Dify配置
DEFAULT_DIFY_BASE_URL=http://192.144.232.60/v1

# OpenAI配置 (可选)
OPENAI_API_KEY=your-openai-api-key

# ===========================================
# 监控配置 (可选)
# ===========================================
GRAFANA_PASSWORD=admin123

# ===========================================
# 功能开关
# ===========================================
ENABLE_USER_REGISTRATION=false
ENABLE_FILE_UPLOAD=true
ENABLE_CHAT_HISTORY=true
ENABLE_KNOWLEDGE_BASE=true

# ===========================================
# 性能配置
# ===========================================
# 文件上传
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/gif,application/pdf

# 聊天配置
MAX_CHAT_HISTORY_DAYS=90
MAX_SESSIONS_PER_USER=50

# API配置
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=900000

# ===========================================
# 日志配置
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
